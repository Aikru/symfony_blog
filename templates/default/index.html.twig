{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .content {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 30ch;
}


</style>
 {% block navbar %} {% endblock %}

<div class="example-wrapper">
    

    {% for article in articles  %}
        <a href='/article/{{article.id}}'> <img  width='300px' height="100px" src= {{article.banner}}> </a>
        <li><a href='/article/{{article.id}}' >{{ article.tittle }} </a></li>
        <li class="content" >{{ article.content }}</li>
        <li>ecrit par {{article.author.email}} le {{ article.DateOfPublication|date("d/m/Y")}}
        </li>

    {% endfor %}

</div>
{% endblock %}

